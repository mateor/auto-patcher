PING_CHECK() {
     case $(uname -s) in
     [Dd]arwin*)
          (ping "$PINGCOUNT" "$@")
          ;;
     *)
          (ping $@ $PINGCOUNT)
          ;;
     esac
}


LOG=$(abspath ./log$DATE.txt)
#echo $ROOT $TOOL $ROM $TEMP "$LOG"
echo "ROOT= $ROOT" >> "$LOG"
