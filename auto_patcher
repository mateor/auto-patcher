[ -f "$TOOL" ] || misspatch_error "patch_tool.tgz is missing"
[ -f "$PTCH" ] || misspatch_error "patch_patches.tgz is missing"
printtask "### verify ROM ###"
[ -f "$ROM" ] || print_error "Cannot find $1!! Make sure you have the location and name right"
echo "### running $0 $@" >> "$LOG"
