          echo ""
          echo "Mod Name:    $PID"
          echo ""
          echo "    $DESC"
          if [[ $DESC1 ]]; then # test to see is there is a second DESC line
               echo "    $DESC1"
          fi
          if [[ $DESC2 ]]; then
               echo -n "$DESC2"
          fi
          echo ""
          echo "Developer: $DEV"
          echo "Dependancies: $DEPENDENCY"
          if [[ $WEBSITE ]]; then
               echo "Website: $WEBSITE"
          fi
          echo ""
          echo "Works on ROMs from Android $FLOOR -> $CEILING"
          echo
          brief_help
          exit
     fi
fi

